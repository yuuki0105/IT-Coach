<%= form_with model: @user, url: mypage_path do |form| %>

  <div class="field">
    <%= form.label :name %><br />
    <%= form.text_field :name, autofocus: true %>
  </div>

  <% if @user.image.attached? %>
    <%= image_tag @user.image %>
  <% else %>
    <%= image_tag "logomark.png" %>
  <% end %>

  <%= form.file_field :image %>

  <div class="field">
    <%= form.label :profile %><br />
    <%= form.text_area :profile %>
  </div>

  <%= form.fields_for :user_skills do |user_skill| %>

    <div class="field">
      <%= user_skill.label :skill_id %><br />
      <%= user_skill.select :skill_id,Skill.all.pluck(:name, :id) %>
    </div>
    <div class="field">
      <%= user_skill.label :experience_year %><br />
      <%= user_skill.number_field :experience_year %>
    </div>
    <div class="field">
      <%= user_skill.label :level %><br />
      <%= user_skill.number_field :level %>
    </div>

  <% end %>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>

<% end %>

<% if @coach %>

<h2>キャリア</h2>
<% @coach.careers.each do |career| %>
  <%= link_to career.organization,edit_coach_career_path(coach_id: @coach.id, id: career.id) %><br>
  <%= career.role %><br>
  <%= career.start_month %> 〜　<%= career.end_month %><br>
<% end %>

<h2>ポートフォリオ</h2>
<% @coach.portfolios.each do |portfolio| %>
  <%= link_to portfolio.title,edit_coach_portfolio_path(coach_id: @coach.id, id: portfolio.id) %><br>
  <%= link_to portfolio.url, portfolio.url %><br>
<% end %>

<% end %>

