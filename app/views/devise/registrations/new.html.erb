<div class="sm:mt-5">

  <h1 class="py-8 sm:p-8 text-3xl font-bold tracking-tight bg-white">会員登録</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-3 py-6 sm:px-8 bg-white"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前", class: "font-bold" %><br />
      <%= f.text_field :name, autofocus: true, class: "mt-2 py-1 px-3 border-2 border-base rounded-md  w-full focus:outline-none focus:shadow-outline", placeholder: "名前"  %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <div class="mt-3 bg-white">
    <%= render "devise/shared/links" %>
  </div>

</div>