<% content_for :javascripts do %>
  <%= javascript_pack_tag "utilities/form" %>
  <%= javascript_pack_tag "utilities/text" %>
  <%= javascript_pack_tag "utilities/button" %>
<% end %>

<div class="sm:mt-5 sm:px-8 max-w-sm mx-auto">

  <h1 class="h1_text my-8">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mt-3 py-6"}) do |f| %>
  <%= render "shared/error_messages", model: resource %>

    <div class="space-y-4 my-6">

      <div>
        <%= f.label :email, "メールアドレス", class: "font-bold block" %>
        <%= f.email_field :email, autocomplete: "email", class: "text_field block w-full mt-4", placeholder: "メールアドレス" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "font-bold block" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "text_field block w-full mt-4", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.hidden_field :remember_me, value: true %>
      <% end %>

      <div>
        <%= link_to 'パスワードを忘れた場合', reset_password_path, class: "text-primary" %>
      </div>

    </div>

    <div>
      <%= f.submit "ログイン", class: "button_main" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links", button_name: "ログイン" %>
  </div>

</div>