<% content_for :javascripts do %>
  <%= javascript_pack_tag "utilities/form" %>
  <%= javascript_pack_tag "utilities/text" %>
  <%= javascript_pack_tag "utilities/button" %>
<% end %>

<div class="sm:px-8">

  <%= render "registrations/shared/coach_registration_title", registration_complete_rate: @registration_complete_rate %>

  <h2>プロフィール画像</h2>

  <%= form_with model: @user, url: registrations_image_path, method: :put do |form| %>

    <%= form.hidden_field :id %>

    <% if @user.image.attached? %>
      <%= image_tag @user.image.variant(resize: "100x100") %>
    <% else %>
      <%= image_tag "default_icon.png" %>
    <% end %>

    <%= form.file_field :image %>

    <%= render "registrations/shared/buttons", form: form, path: about_coach_path %>

  <% end %>

</div>