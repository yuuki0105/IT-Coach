<%= form_with model: model, url: registrations_abilities_path, method: :put do |form| %>

  <%= render 'shared/error_messages', model: form.object %>

  <div id="abilities">
    <%= link_to_add_association '追加する', form, :abilities, data: { association_insertion_method: 'append' } %>
    <%= form.fields_for :abilities do |ability| %>
     <%= render "registrations/abilities/ability_fields", f: ability %>
    <% end %>
  </div>

  <%= render "registrations/shared/buttons", form: form, path: registrations_user_skills_path %>

<% end %>